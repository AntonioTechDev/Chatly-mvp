# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================
SUPABASE_ACCESS_TOKEN=your_supabase_access_token
SUPABASE_PROJECT_REF=your_project_ref

# Public keys (safe to expose in client-side code)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_key

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
VITE_APP_NAME=Chatly MVP
VITE_APP_ENV=development
VITE_APP_VERSION=1.0.0

# API Base URL (for custom backend endpoints if needed)
VITE_API_BASE_URL=http://localhost:3000/api

# ============================================================================
# WHATSAPP BUSINESS API
# ============================================================================
WHATSAPP_VERIFY_TOKEN=your_webhook_verify_token_here
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id_here

# ============================================================================
# MESSENGER API
# ============================================================================
MESSENGER_VERIFY_TOKEN=your_messenger_verify_token_here

# ============================================================================
# AI / EMBEDDINGS (Optional)
# ============================================================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ============================================================================
# N8N INTEGRATION (Optional)
# ============================================================================
N8N_WEBHOOK_URL=http://localhost:5678/webhook
N8N_API_KEY=your_n8n_api_key_here

# Human Operator Message Webhook
VITE_HUMAN_OPERATOR_WEBHOOK_TEST=https://automagruppoitalia.app.n8n.cloud/webhook-test/human-operator
VITE_HUMAN_OPERATOR_WEBHOOK_PROD=https://automagruppoitalia.app.n8n.cloud/webhook/human-operator

# ============================================================================
# FEATURES FLAGS
# ============================================================================
VITE_ENABLE_AI_ASSISTANT=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_WHATSAPP=true
VITE_ENABLE_INSTAGRAM=true
VITE_ENABLE_MESSENGER=true

# ============================================================================
# DEVELOPMENT / DEBUG
# ============================================================================
VITE_DEBUG_MODE=true
VITE_SHOW_QUERY_LOGS=false

# ============================================================================
# SECURITY
# ============================================================================
VITE_SESSION_TIMEOUT=60
